rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow each authenticated user to read/write only their own subtree
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optionally, lock everything else by default
    // false = locked; true = open;
    // this is you're master emergency switch
    // starting today with on so I can get to alpha for myself
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

